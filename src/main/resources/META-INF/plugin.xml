<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.opatrascoiu.intellijpluginsample</id>
    <name>Legend LSP</name>
    <vendor>opatrascoiu</vendor>

    <depends>com.intellij.modules.ultimate</depends>

    <resource-bundle>messages.LegendBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Language -->
        <fileType name="Pure"
                  language="Pure"
                  implementationClass="org.finos.legend.ide.intellij.lang.PureFileType"
                  extensions="pure"
                  fieldName="INSTANCE"/>

        <!-- https://plugins.jetbrains.com/docs/intellij/settings-guide.html -->
        <projectConfigurable groupId="build.tools" id="org.finos.legend.ide.intellij.settings.LegendSettingsConfigurable"
                             instance="org.finos.legend.ide.intellij.settings.LegendSettingsConfigurable"
                             key="legend.name" bundle="messages.LegendBundle">
        </projectConfigurable>

        <!-- https://www.jetbrains.com/help/idea/tool-windows.html -->
        <toolWindow factoryClass="org.finos.legend.ide.intellij.tool.LegendToolWindowFactory" id="LegendToolWindow"/>

        <!-- LSP -->
        <platform.lsp.serverSupportProvider implementation="org.finos.legend.ide.intellij.lsp.LegendLspServerSupportProvider"/>
    </extensions>

    <applicationListeners>
        <!-- https://plugins.jetbrains.com/docs/intellij/plugin-listeners.html -->
        <listener class="org.finos.legend.ide.intellij.listeners.LegendApplicationActivationListener" topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>

</idea-plugin>
